<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#00E5FF"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Second">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
    <EditText
        android:layout_marginTop="80sp"
        android:hint="Event Name"
        android:id="@+id/name"
        android:textColorHint="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:hint="Type of Event"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:textColorHint="#000000"
        android:id="@+id/type"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40sp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="65sp"
            android:layout_marginLeft="45sp"
            android:id="@+id/event"
            android:background="@drawable/event"
            android:layout_height="65sp"
            tools:visibility="visible" />
        <ImageView
            android:layout_width="65sp"
            android:layout_marginLeft="40sp"
            android:background="@drawable/birth"
            android:id="@+id/birth"
            android:layout_height="65sp"
            tools:visibility="visible" />
        <ImageView
            android:layout_width="65sp"
            android:layout_marginLeft="40sp"
            android:background="@drawable/anni"
            android:id="@+id/anni"
            android:layout_height="65sp"
            tools:visibility="visible" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Event"
            android:layout_marginLeft="51sp"
            android:textSize="18sp"
            android:textColor="#F50057"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Birthday"
            android:layout_marginLeft="52sp"
            android:textSize="18sp"
            android:textColor="#E91E63"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Anniversary"
            android:layout_marginLeft="31sp"
            android:textSize="18sp"
            android:textColor="#E91E63"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TimePicker
        android:id="@+id/pickertime"
        android:layout_marginLeft="55dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:timePickerMode="spinner"></TimePicker>



    <DatePicker
        android:id="@+id/pickerdate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:datePickerMode="spinner"
        android:background="#00E5FF"></DatePicker>
    <Button
        android:id="@+id/setalarm"
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Alarm"/>
    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30sp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50sp"
            android:background="@drawable/close"
            android:id="@+id/close"
            android:layout_marginLeft="20dp"
            android:layout_height="50sp" />
        <ImageView
            android:layout_width="50sp"
            android:background="@drawable/ic_check_black_24dp"
            android:id="@+id/check"
            android:layout_marginLeft="210sp"
            android:layout_height="50sp" />
    </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>